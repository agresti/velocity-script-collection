<script type="text/javascript">
// <![CDATA[#protect
$(document).ready(function () {
    $(".classDescriptionLimit").each(function () {
        const currentText = $(this).text().trim();
        const limit = 530;

        if (currentText.length > limit) {
            $(this).text(currentText.substring(0, limit) + "...");
        }
    });
});
// #protect]]>
</script>

